
<h1>Add Color</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/new">
  <div class="form-group">
    <label>ID</label>
    <input type="text" name="id" class="form-control" placeholder="Add ID">
  </div>
  <div class="form-group">
    <label>Color Name</label>
    <input type="text" name="color_name" class="form-control" placeholder="Color Name">
  </div>
  <div class="form-group">
    <label>Value</label>
    <input type="text" name="value" class="form-control" placeholder="RGB or #Hex">
  </div>
  <input type="submit" class="btn btn-primary" value="Save">
</form>